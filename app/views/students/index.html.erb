<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Image</th>
      <th>Classroom</th>
      <th>Parent1</th>
      <th>Parent2</th>
      <th>Actions</th>
    </tr>
    <tr>
      <%= form_for Student.new do |f| %>
        <td>
          <%= f.text_field :first_name, :class => "form-control" %>
        </td>
        <td>
          <%= f.text_field :last_name, :class => "form-control" %>
        </td>
        <td>
          <%= f.text_field :gender, :class => "form-control" %>
        </td>
        <td>
          <%= f.text_field :image, :class => "form-control" %>
        </td>
        <td>
          <%= f.text_field :classroom, :class => "form-control" %>
        </td>
        <td>
          <%= f.text_field :parent1, :class => "form-control" %>
        </td>
        <td>
          <%= f.text_field :parent2, :class => "form-control" %>
        </td>
        <td>
          <%= f.submit :class => "btn btn-primary add-student "%>
        </td>
        <% end %>
      </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td style="text-decoration: underline; 
                   color: blue">
          <%= link_to student.first_name, student %>
        </td>
        <td><%= student.last_name %></td>
        <td><%= student.gender %></td>
        <td><%= student.image %></td>
        <td><%= student.classroom %></td>
        <td><%= student.parent1 %></td>
        <td><%= student.parent2 %></td>
        <!-- action buttons -->
        <td>
          <%= link_to "Edit", edit_student_path(student), :id => "edit", :class => "btn btn-warning edit-student" %>
          <%= link_to "Erase", student, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger delete-student" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
